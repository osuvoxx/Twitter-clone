

 <div class="row">
      <div class="col-md-3 rt-border">
      <%= render 'layouts/navbar' %>
      </div>
        <div class="col-md-6 rt-border" >
         <h4 class="mt-3">Home <span style="float:right"><%= link_to 'Tweet', new_tweet_path ,class:"btn btn-info"%></span></h4>
        <hr>
        <div class="jumbotron jumbotron-fluid py-3 px-2">
            <div class="container">
              <h4 class="title"><img class="image" src="/assets/prof.png">  <%= current_user.name %> <span style="font-size:19px">(@<%= current_user.username %>)</span> </h4><hr>
              <h5 class="lead px-5 mb-3"><%= @tweet.tweet %></h5> 
              <p class=" text-center "><%= link_to 'Edit', edit_tweet_path(@tweet) ,class:"btn btn-info"%> 
              <%= link_to 'Back', tweets_path,class:"btn btn-secondary" %></p>
            </div>
        </div>
      </div>
      <div class="col-md-3 " >
      <%= render 'who-to-follow' %>
      </div>
</div>

    