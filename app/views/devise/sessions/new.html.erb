
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<div class="row">
    <div class="col-md-4">
       
    </div>

    <div class="col-md-4" style=" font-weight: 00;font-size:20px">  
    <%= f.error_notification %>
    <br>
      <h1><i class="fa fa-twitter twitter"></i><h1>
      <h2 style="font-weight:900">LogIn in to Twitter</h2>
     
        <div class="form-inputs" style="font-size:20px;">
        <div class="form-inputs">
        <div class="mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class:"form-control",placeholder: "Email" } ,
                      label: false %>
        </div>
        <div class="mb-3">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password",placeholder: "Password" , class:"form-control"} ,
                      label: false %>
        </div>
        <div class="mb-3">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        </div>
</div>

        <div class="form-actions text-center mb-3">
          <%= f.button :submit, "Log in" ,class:"btn btn-info" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
