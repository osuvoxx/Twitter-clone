<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="row">
    <div class="col-md-4">
       
    </div>

    <div class="col-md-4" style=" font-weight: 00;font-size:20px">
      <% if flash[:error_notification]%>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= f.error_notification %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% end %>
      
    <br>
      <h1><i class="fa fa-twitter twitter"></i><h1>
      <h2 style="font-weight:900">SignUp in to Twitter</h2>
     
        <div class="form-inputs" style="font-size:20px;">

        <div class="mb-3">
          <%= f.input :name,
                      required: true,
                      input_html: { class:"form-control",placeholder: "Name" },
                      label: false %>
        </div>
        
        <div class="mb-3">
          <%= f.input :username,
                      required: true,
                      input_html: { class:"form-control mb-3",placeholder: "Username" },
                      label: false %>
        </div>

        <div class="mb-3 field">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" ,class:"form-control",placeholder: "Email"},
                      label: false %>
        </div>
        <div class="mb-3">                    
          <%= f.input :password,
                      required: true,
                      hint: (" *#{@minimum_password_length} characters minimum" if @minimum_password_length ),
                      input_html: { autocomplete: "new-password" ,class:"form-control ",placeholder: "Password"},
                      label: false %>
        </div>

        <div class="mb-3">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password",class:"form-control mb-3",placeholder: "Confirm Password" },
                      label: false %>
        </div>

        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Sign up", class:"btn btn-info" ,style:"width:300px;border-radius:25px"%>
        </div>
      <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
    </div> 
</div>



























